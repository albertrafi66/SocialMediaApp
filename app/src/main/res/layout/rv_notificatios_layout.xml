<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="3dp"
        android:id="@+id/profile_image_notification"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/profile_pic"
        />


    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/profile_image_notification"
        app:layout_constraintLeft_toRightOf="@id/profile_image_notification"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/normal_txt_size"
        android:fontFamily="@font/bree_serif"
        android:textColor="@color/dark_black"
        android:text="Albert Rafi"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_small_txt_size"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/gray_txt"
            android:text="Albert Rafi"
            android:layout_height="wrap_content"/>
</LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>