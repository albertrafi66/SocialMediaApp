<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:riv_corner_radius="10dip"
            app:riv_tile_mode="repeat" />

        <View
            app:layout_constraintTop_toTopOf="@id/rec_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/rec_profile_image"
            app:layout_constraintLeft_toLeftOf="@id/rec_profile_image"
            app:layout_constraintRight_toRightOf="@id/rec_profile_image"
            android:layout_width="0dp"
            android:background="@drawable/stroke_white_circle"
            android:layout_height="0dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="3dp"
            android:layout_margin="5dp"
            android:id="@+id/rec_profile_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile_pic"
            />

        <TextView
            android:layout_margin="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_small_txt_size"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/white"
            android:text="Albert Rafi"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="7dp"
            app:layout_constraintTop_toTopOf="@id/rec_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/rec_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/live"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>









</RelativeLayout>