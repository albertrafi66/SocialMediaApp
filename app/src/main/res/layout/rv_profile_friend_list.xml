<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_friend_list"
        diagonal:layout_constraintTop_toTopOf="parent"
        diagonal:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_pic"
         />
    <LinearLayout
        android:layout_marginLeft="10dp"
        diagonal:layout_constraintTop_toTopOf="@id/img_profile_friend_list"
        diagonal:layout_constraintLeft_toRightOf="@id/img_profile_friend_list"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_txt_size"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/dark_black"
            android:text="Albert Rafi"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/friend_about"
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_small_txt_size"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/gray_txt"
            android:text="Albert Rafi"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/friend_ship_date"
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_small_txt_size"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/pink"
            android:text="Albert Rafi"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>